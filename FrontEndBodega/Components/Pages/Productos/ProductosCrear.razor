</EditForm>

<p>@mensaje</p>

@code {
    private ProductoDTO producto = new();
    private string mensaje = string.Empty;

    private IBrowserFile? selectedFile; // archivo seleccionado
    private string? vistaPreviaImagen; // data url para preview se agrego

    private List<CategoriaDTO> categorias = new();
    private List<ProveedorDTO> proveedores = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            categorias = await ProductoService.ObtenerCategoriasAsync();
            proveedores = await ProductoService.ObtenerProveedoresAsync();
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al cargar combos: {ex.Message}";
        }
    }


    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        selectedFile = e.File; // guardamos el archivo cuando se selecciona
        if (selectedFile != null)
        {
            using var ms = new MemoryStream();
            await selectedFile.OpenReadStream(5 * 1024 * 1024).CopyToAsync(ms); // 5 MB
            var bytes = ms.ToArray();
            vistaPreviaImagen = $"data:{selectedFile.ContentType};base64,{Convert.ToBase64String(bytes)}";
        } //SE AÑADIO
    }

    private async Task HandleCreate()
    {
        try
        {
            Stream? fileStream = null;
            string? fileName = null;
            string? contentType = null;

            if (selectedFile != null)
            {
                fileStream = selectedFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024); // máximo 5 MB
                fileName = selectedFile.Name;
                contentType = selectedFile.ContentType;
            }

            var res = await ProductoService.CrearProductoAsync(producto, fileStream, fileName, contentType);
            mensaje = res;

            if (res.StartsWith("✅"))
            {
                NavManager.NavigateTo("/productos");
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error: {ex.Message}";
        }
    }
}