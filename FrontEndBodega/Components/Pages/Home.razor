@page "/"
@using FrontEndBodega.DTO
@using FrontEndBodega.Services

@inject NavigationManager navigationManager
@inject AutheService authService

@code {

    private UserSession userSession = new UserSession();
    private string errorMessage;
    [Inject] private NavigationManager NavManager { get; set; }

    private void IrARegistro()
    {
        NavManager.NavigateTo("/counter");
    }

    private async Task Login()
    {
        try
        {
            var token = await authService.Login(userSession);

            // --- AQUÍ ESTÁ EL CAMBIO ---
            // Si el token es nulo o vacío, las credenciales son incorrectas.
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Credenciales incorrectas";
                return;
            }

            // Si el token tiene un valor, el login fue exitoso.
            await authService.SetToken(token);
            navigationManager.NavigateTo("/Counter");

        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error: {ex.Message}";
        }
    }

}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">


    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f3f3f3;
            color: #1f2937;
        }

        .login-card {
            background-color: lavenderblush;
            border-radius: 16px;
            border: 2px solid #e0e0e0;
            width: 100%;
            max-width: 400px;
        }

        .login-form-section {
            padding: 30px;
        }

            .login-form-section h2 {
                color: green;
                font-weight: bold;
                letter-spacing: 1px;
            }

        .form-label {
            font-weight: 600;
            color: #1f2937;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 14px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: green;
                box-shadow: 0 0 0 0.2rem rgba(0, 128, 0, 0.25);
                outline: none;
            }

        .buttonstyleLogin {
            background-color: green;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .buttonstyleLogin:hover {
                background-color: darkgreen;
                transform: translateY(-1px);
            }

        .alert-danger {
            border-radius: 10px;
        }

        .login-image-section img {
            border-radius: 10px;
            border: 2px solid lightgreen;
        }
    </style>

</head>

<body>
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow-lg p-4 login-card">
            <div class="login-form-section">
                <div class="login-image-section text-center mb-4">
                    <img src="/imagen/logo.png" class="img-fluid" style="max-width: 150px;">
                </div>
                <h2 class="text-center mb-4">Bienvenido</h2>

                <EditForm Model="userSession" OnValidSubmit="Login">
                    <div class="mb-3">
                        <label for="userInput" class="form-label">Usuario</label>
                        <InputText class="form-control" @bind-Value="userSession.Username" required />
                    </div>
                    <div class="mb-3">
                        <label for="passwordInput" class="form-label">Contraseña</label>
                        <InputText type="password" class="form-control" @bind-Value="userSession.Password" placeholder="Ingresa tu contraseña" required />
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="buttonstyleLogin">Entrar</button>
                    </div>
                </EditForm>

                <!-- Botón fuera del EditForm para evitar que dispare el Login -->
                <div class="d-grid gap-2 mb-3">
                    <button type="button" class="buttonstyleLogin" @onclick="IrARegistro">
                        Registrarme
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">@errorMessage</div>
                }
            </div>
        </div>
    </div>
    @* prueba de cambios *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
