@page "/"
@using FrontEndBodega.DTO
@using FrontEndBodega.Services

@inject NavigationManager navigationManager
@inject AutheService authService

@code {

    private UserSession userSession = new UserSession();
    private string errorMessage;

    private async Task Login()
    {
        try
        {
            var token = await authService.Login(userSession);

            // --- AQUÍ ESTÁ EL CAMBIO ---
            // Si el token es nulo o vacío, las credenciales son incorrectas.
            if (string.IsNullOrEmpty(token))
            {
                errorMessage = "Credenciales incorrectas";
                return;
            }

            // Si el token tiene un valor, el login fue exitoso.
            await authService.SetToken(token);
            navigationManager.NavigateTo("/Weather");

        }
        catch (Exception ex)
        {
            errorMessage = $"Ocurrió un error: {ex.Message}";
        }
    }

}


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

</head>

<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 login-card w-75">
            <div class="login-form-section">
                <div class="login-image-section text-center mb-4">
                    <img src="/img/Logo.jpeg" class="img-fluid" style="max-width: 150px;">
                </div>
                <h2 class="text-center mb-4">Bienvenido</h2>

                <EditForm Model="userSession"  OnValidSubmit="Login">
                    <div class="mb-3">
                        <label for="userInput" class="form-label">Usuario</label>
                        <InputText class="form-control" @bind-Value="userSession.Username" required />
                    </div>
                    <div class="mb-3">
                        <label for="passwordInput" class="form-label">Contraseña</label>
                        <InputText type="password" class="form-control" @bind-Value="userSession.Password" placeholder="Ingresa su contraseña" required />
                    </div>
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="buttonstyleLogin">Entrar</button>
                    </div>
                </EditForm>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger" role="alert">@errorMessage</div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
