@inherits LayoutComponentBase

 <div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="main-layout-content">
        @* <div class="top-row">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div> *@

        <article class="layout-article">
            @Body
        </article>
    </main>
</div> 

<div id="blazor-error-ui">
    Ocurrió un error inesperado.
    <a href="" class="reload">Recargar</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f3f3f3;
        color: #1f2937;
    }

    .page {
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        width: 250px;
        background-color: green;
        color: black;
        box-shadow: 3px 0 10px rgba(0, 0, 0, 0.1);
        z-index: 1000;
    }

    main.main-layout-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        padding: 0 20px;
    }

    .top-row {
        background-color: lavenderblush;
        padding: 15px 20px;
        font-weight: 500;
        border-bottom: 2px solid #e0e0e0;
        display: flex;
        justify-content: flex-end;
    }

        .top-row a {
            color: black;
            text-decoration: none;
            font-weight: 600;
        }

            .top-row a:hover {
                color: green;
                text-decoration: underline;
            }

    /* .layout-article {
        background-color: white;
        margin-top: 20px;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        min-height: calc(100vh - 80px);
    } */
    .layout-article {
        width: 90%; /* ocupa 90% del ancho de su contenedor */
        min-width: 300px; /* nunca menor a 300px */
        max-width: 1200px; /* nunca mayor a 1200px */
        padding: 2rem; /* padding relativo al tamaño de fuente */
        margin: 20px auto; /* centrado horizontal */
        background-color: white;
        border-radius: 1rem; /* esquinas redondeadas relativas */
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.05);
    }



    #blazor-error-ui {
        background: #f8d7da;
        color: #721c24;
        padding: 10px;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        display: none;
        z-index: 2000;
        border-top: 1px solid #f5c6cb;
        text-align: center;
    }

        #blazor-error-ui .reload,
        #blazor-error-ui .dismiss {
            margin-left: 15px;
            color: #721c24;
            font-weight: bold;
            cursor: pointer;
        }
</style>
